<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Notebook</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Righteous&display=swap" rel="stylesheet"/>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <!-- Register Page -->
    <section id="login">
      <div class="container">
        <div class="w-full min-h-screen flex justify-center items-center">
          <div class="w-full lg:w-3/4 flex flex-wrap">
            <!-- Notes Icon -->
            <div class="w-full lg:w-1/2">
              <figure class="w-40 lg:w-2/3 mx-auto animate-floating">
                <img src="/asset/note.png" class="w-full">
              </figure>
              <h3 class="text-5xl lg:text-7xl text-center font-bold -mt-4 animate-fade-in">My <span class="text-main">Notes</span></h3>
            </div>
            <!-- Notes Icon -->

            <!-- Form -->
            <div class="w-full px-10 lg:w-1/2 2xl:px-16 flex items-center">
              <div class="w-full px-4">
                <form action="/register/submit" method="POST">
                  <h1 class="mt-16 text-lg lg:mt-0 lg:text-3xl font-bold">Register</h1>
                  <div class="mt-6">
                    <input type="text" name="username" placeholder="Username" autocomplete="off" required class="w-full bg-transparent outline-none p-2 mt-1 border-b border-b-white focus-within:border-b-main">
                  </div>
                  <div class="mt-6">
                    <input pattern="^[a-zA-Z0-9]+$" type="password" name="password" placeholder="Password" required class="w-full bg-transparent outline-none p-2 mt-1 border-b border-b-white focus-within:border-b-main">
                  </div>
                  <div class="mt-6">
                    <input pattern="^[a-zA-Z0-9]+$" type="password" name="passwordConfirm" placeholder="Password Confirm" required class="w-full bg-transparent outline-none p-2 mt-1 border-b border-b-white focus-within:border-b-main">
                  </div>
                  <!-- Alert -->
                  <% if(message) { %>
                  <div class="mt-6">
                    <p class="w-full text-red-400 px-2"><%= message %></p>
                  </div>
                  <% } %>
                  <!-- Alert -->
                  <div class="mt-6">
                    <button type="submit" class="block w-full font-bold bg-main px-8 py-3 rounded-2xl active:bg-amber-500 transition duration-300">Login</button>
                  </div>
                </form>
              </div>
            </div>
            <!-- Form -->
          </div>
        </div>
      </div>
    </section>
    <!-- Register Page -->
  </body>
</html>
